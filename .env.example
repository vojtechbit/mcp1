# Google OAuth credentials
GOOGLE_CLIENT_ID=your-client-id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your-client-secret
REDIRECT_URI=http://localhost:3000/auth/google/callback

# Production redirect (update when deploying to Render)
# REDIRECT_URI=https://your-app.onrender.com/auth/google/callback

# Encryption key (generate with: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))")
ENCRYPTION_KEY=your-64-character-hex-encryption-key

# Database (local for development, Render provides this in production)
DATABASE_URL=postgresql://localhost:5432/oauth_dev

# Server settings
PORT=3000
NODE_ENV=development
